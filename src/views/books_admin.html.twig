						        				<input class="card-panel teal lighten-2" name="imagen" id="imagen" type="file">
						      				</div>
						     				<div class="file-path-wrapper">
						        				<input class="file-path validate" type="text">
						      				</div>
			 							</div>
			 							
							      	</div>
							      	<div  class="col s2.5">
							      		<h6 class="texto-modal">Número de páginas:</h6>
							      		<h6 class="texto-modal">Año de publicación:</h6>
							      		<h6 class="texto-modal">Editorial:</h6>
							      		<h6 class="texto-modal">Descripción:</h6>
